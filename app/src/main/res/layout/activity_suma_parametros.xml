<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejercicio: Calcular Suma"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FF9800"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/editTextNumero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese un número"
        android:inputType="number"
        android:padding="8dp"
        android:layout_below="@id/textViewTitulo"
        android:background="#E0F7FA"
        android:textColor="#000000" />

    <Button
        android:id="@+id/buttonCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextNumero"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Calcular Suma"
        android:textColor="#FFFFFF"
        android:background="#FF9800" />

    <TextView
        android:id="@+id/textViewResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonCalcular"
        android:layout_marginTop="16dp"
        android:text="Resultado aparecerá aquí"
        android:textSize="16sp"
        android:padding="8dp"
        android:background="#E0E0E0"
        android:textColor="#000000"
        android:gravity="center" />

</RelativeLayout>
