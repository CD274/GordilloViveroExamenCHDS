<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejercicios de Consumo Móvil de Web Service con Express de Node.js"
        android:textColor="#FF9800"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:layout_margin="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!-- Grid Layout -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:padding="16dp"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_marginTop="16dp">

        <!-- Buttons -->
        <Button
            android:id="@+id/btnBiografia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:text="Biografía" />

        <Button
            android:id="@+id/btnListaNombres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:text="Lista de Nombres" />

        <Button
            android:id="@+id/btnPerimetroArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:text="Perímetro y Área de Figuras" />

        <Button
            android:id="@+id/btnSuma"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:text="Suma" />

        <Button
            android:id="@+id/btnSumaParametros"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:text="Suma con Parámetros" />

    </GridLayout>
</RelativeLayout>
